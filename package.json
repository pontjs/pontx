{
  "name": "pontx",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "inst": "npm run clean-lock && npm run clean && npm i --registry=http://registry.npm.alibaba-inc.com --force && lerna bootstrap",
    "changelog": "node -r esm scripts/changelog.js",
    "build:commonjs": "lerna exec --scope pontx-spec* --stream -- npm run build:commonjs",
    "build:commonjs:watch": "concurrently 'tsc -p ./packages/pontx-spec/tsconfig.lib.json -w' 'tsc -p packages/pontx-spec-diff/tsconfig.commonjs.json -w'",
    "build:vscode": "cd packages/pontx-ui && npm run build && cd ../vscode-pontx/media && npm run build && cd ../ && npm run build",
    "build": "tsc --build && npm run build:commonjs && npm run build:vscode",
    "start": "tsc --build -w",
    "watch": "concurrently 'npm start' 'npm run build:commonjs:watch'",
    "ui": "cd packages/pontx-ui && npm run start",
    "vs-ui": "cd packages/pontx-ui && npm run build && cd ../vscode-pontx/media && npm run build",
    "clean": "lerna clean --yes && rm -rf ./node_modules",
    "lint": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "clean-lock": "node scripts/clean-lock.js && rm packages/vscode-pontx/media/package-lock.json || true",
    "sync:package": "node scripts/syncRegistry.js https://web.npm.alibaba-inc.com",
    "release:all": "npm run release:npm && npm run release:vscode",
    "release:npm": "npm run clean-lock && lerna version patch --yes --force-publish --message 'chore: publish' && lerna exec --ignore vscode-pontx --ignore vscode-pontx-media --ignore pontx-report-plugin --ignore jsonschema-form  --stream -- npm publish --registry https://registry.npmjs.org --otp $1",
    "release:dry": "node scripts/release.js --dry",
    "release:vscode": "sh scripts/releaseVscode.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pontjs/pontx.git"
  },
  "bugs": {
    "url": "https://github.com/pontjs/pontx/issues"
  },
  "homepage": "https://github.com/pontjs/pontx#readme",
  "gitHooks": {
    "commit-msg": "node ./scripts/verifyCommit.js && node ./scripts/verifySafeCode.js",
    "post-merge": "lerna bootstrap",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "packages/**/src/*.ts": [
      "prettier --write",
      "git add"
    ],
    "plugins/**/src/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^5.1.0",
    "@types/http-server": "^0.10.0",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.33",
    "acorn": "^8.8.2",
    "commander": "^9.2.0",
    "concurrently": "^7.2.2",
    "css-loader": "^6.7.1",
    "file-loader": "^6.2.0",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "jest-config": "^24.8.0",
    "lerna": "^4.0.0",
    "less": "^4.1.2",
    "less-loader": "^11.1.0",
    "lint-staged": "^12.4.1",
    "lodash": "*",
    "mini-css-extract-plugin": "^2.6.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "3.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^9.4.1",
    "typescript": "^5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0",
    "yorkie": "^2.0.0"
  },
  "engineStrict": true,
  "engines": {
    "npm": "7.18.1",
    "node": "^16"
  },
  "workspaces": [
    "/packages/!(vscode-pontx-cp)/**",
    "plugins/**"
  ]
}
