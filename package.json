{
  "name": "pontx",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "test": "jest pont",
    "changelog": "node -r esm scripts/changelog.js",
    "build:commonjs": "lerna exec --scope pontx-spec* --stream -- npm run build:commonjs",
    "build:commonjs:watch": "concurrently 'tsc -p ./packages/pontx-spec/tsconfig.lib.json -w' 'tsc -p packages/pontx-spec-diff/tsconfig.commonjs.json -w'",
    "build:vscode": "cd packages/pontx-ui && npm run build && cd ../vscode-pontx/media && npm run build && cd ../ && npm run build",
    "build": "tsc --build && npm run build:commonjs && npm run build:vscode",
    "start": "tsc --build -w",
    "ui": "cd packages/pontx-ui && npm run start",
    "vs-ui": "cd packages/pontx-ui && npm run build && cd ../vscode-pontx/media && npm run build",
    "clean": "lerna clean && rimraf ./node_modules",
    "lint": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "sync:package": "node scripts/syncRegistry.js",
    "release:all": "npm run release && npm run release:vscode",
    "release": "lerna version patch --message 'chore: publish' && lerna exec --ignore vscode-pontx --ignore vscode-pontx-media --ignore pontx-report-plugin --ignore jsonschema-form  --stream -- npm publish",
    "release:dry": "node scripts/release.js --dry",
    "release:vscode": "sh scripts/releaseVscode.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pontjs/pontx.git"
  },
  "bugs": {
    "url": "https://github.com/pontjs/pontx/issues"
  },
  "homepage": "https://github.com/pontjs/pontx#readme",
  "gitHooks": {
    "commit-msg": "node ./scripts/verifyCommit.js && node ./scripts/verifySafeCode.js",
    "post-merge": "lerna bootstrap",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "packages/**/src/*.ts": [
      "prettier --write",
      "git add"
    ],
    "plugins/**/src/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^5.1.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.33",
    "commander": "^9.2.0",
    "concurrently": "^7.2.2",
    "lerna": "^4.0.0",
    "less": "^4.1.2",
    "lint-staged": "^12.4.1",
    "lodash": "*",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "3.0.2",
    "typescript": "^4.6.4",
    "yorkie": "^2.0.0"
  }
}
