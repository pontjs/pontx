{
  "name": "pont2",
  "private": true,
  "version": "1.0.12",
  "license": "MIT",
  "scripts": {
    "test": "jest pont",
    "changelog": "node -r esm scripts/changelog.js",
    "build:commonjs": "lerna exec --scope pont-spec* --stream -- npm run build:commonjs",
    "build:commonjs:watch": "concurrently 'tsc -p ./packages/pont-spec/tsconfig.lib.json -w' 'tsc -p packages/pont-spec-diff/tsconfig.commonjs.json -w'",
    "build": "tsc --build && npm run build:commonjs",
    "start": "tsc --build -w",
    "ui": "cd packages/pont-ui && npm run start",
    "vs-ui": "cd packages/pont-ui && npm run build && cd ../vscode-pont/media && npm run build",
    "clean": "lerna clean && rimraf ./node_modules",
    "lint": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "release:all": "npm run release && npm run release:vscode",
    "release": "lerna version patch --message 'chore: publish' && lerna exec --ignore vscode-pont2 --ignore vscode-pont-media --ignore pont-report-plugin --ignore jsonschema-form  --stream -- npm publish",
    "release:dry": "node scripts/release.js --dry",
    "release:vscode": "sh scripts/releaseVscode.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pont2/pont.git"
  },
  "bugs": {
    "url": "https://github.com/pont2/pont/issues"
  },
  "homepage": "https://github.com/pont2/pont#readme",
  "gitHooks": {
    "commit-msg": "node ./scripts/verifyCommit.js",
    "post-merge": "lerna bootstrap",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "packages/**/src/*.ts": [
      "prettier --write",
      "git add"
    ],
    "plugins/**/src/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^5.1.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.33",
    "commander": "^9.2.0",
    "concurrently": "^7.2.2",
    "lerna": "^4.0.0",
    "less": "^4.1.2",
    "lint-staged": "^12.4.1",
    "lodash": "*",
    "prettier": "^2.7.1",
    "rimraf": "3.0.2",
    "typescript": "^4.6.4",
    "yorkie": "^2.0.0"
  }
}
