    },
    {
      "path": "plugins/generate/pontx-react-hooks-generate-plugin"
    },
    {
      "path": "plugins/generate/pontx-async-sdk-plugin"
    },
    {
      "path": "plugins/parser/pontx-oas2-parser-plugin"
