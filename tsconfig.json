{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "lib",
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "pontx-spec": ["packages/pontx-spec"],
      "pontx-spec-diff": ["packages/pontx-spec-diff"],
