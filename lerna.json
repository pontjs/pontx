{
  "packages": ["packages/**", "plugins/**"],
  "npmClient": "npm",
  "npmClientArgs": ["--no-package-lock", "--legacy-peer-deps", "--force", "--registry https://registry.npm.taobao.org"],
  "version": "0.3.40",
  "command": {
    "publish": {
      "ignoreChanges": ["package-lock.json", "*.md"],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--legacy-peer-deps",
        "--force",
        "--registry https://registry.npm.taobao.org"
      ]
    }
  },
  "publishConfig": {
    "directory": "lib"
  }
}
