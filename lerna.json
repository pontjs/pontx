{
  "packages": [
    "packages/**",
    "plugins/**"
  ],
  "npmClient": "yarn",
  "version": "0.3.70",
  "useWorkspaces": true,
  "command": {
    "registry": "https://registry.npmmirror.com",
    "publish": {
      "ignoreChanges": [
        "package-lock.json",
        "*.md"
      ],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--registry https://registry.npmmirror.com"
      ]
    }
  },
  "publishConfig": {
    "directory": "lib"
  }
}
