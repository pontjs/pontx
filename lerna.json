{
  "packages": ["packages/**", "plugins/**", "sdk/**", "examples/**", "semix/**"],
  "version": "0.4.12",
  "useWorkspaces": true,
  "command": {
    "registry": "https://registry.npmmirror.com",
    "publish": {
      "ignoreChanges": ["package-lock.json", "*.md"],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClient": "yarn",
      "npmClientArgs": ["--registry https://registry.npmmirror.com"]
    }
  },
  "publishConfig": {
    "directory": "lib"
  }
}
