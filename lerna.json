{
  "packages": [
    "packages/**",
    "plugins/**"
  ],
  "npmClient": "npm",
  "npmClientArgs": [
    "--legacy-peer-deps",
    "--force",
    "--registry https://registry.npm.taobao.org"
  ],
  "version": "0.3.53",
  "command": {
    "publish": {
      "ignoreChanges": [
        "package-lock.json",
        "*.md"
      ],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--legacy-peer-deps",
        "--force",
        "--registry https://registry.npm.taobao.org"
      ]
    }
  },
  "publishConfig": {
    "directory": "lib"
  }
}
